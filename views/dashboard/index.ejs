<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/style.css" />
    <title>Dashboard</title>
  </head>
  <body>
    <div class="container">
      <!-- Total Sales Section -->
      <section class="section">
        <h2>Total Sales</h2>
        <div class="sales-info">
          <div class="today">Today: $1000</div>
          <div class="this-month">This Month: $5000</div>
          <button class="next-month-btn">Expected Sales Next Month</button>
          <button class="next-month-btn">Add Sale Record</button>
        </div>
      </section>

      <!-- Product Information Section -->
      <section class="section">
        <h2>Product Information</h2>
        <div class="product-info">
          <div class="product-count">Number of Products: 100</div>
          <div class="recent-product">Recent Product: Product Name</div>
          <div class="recent-sale">Recent Sale: Sale Details</div>
        </div>
      </section>

      <!-- Reports Section -->
      <section class="section">
        <h2>Reports</h2>
        <div class="report-buttons">
          <button class="report-btn">Prediction 1</button>
          <button class="report-btn">Prediction 2</button>
          <button class="report-btn">Prediction 3</button>
        </div>
      </section>
    </div>
  </body>
</html>
