<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit Sales Record</title>
    <link rel="stylesheet" href="/css/sales_edit.css" />
  </head>
  <body>
    <h1>Update Sales Record</h1>
    <form
      action="/dashboard/sales/edit/<%= record._id %>?_method=PUT"
      method="POST"
    >
      <div>
        <label for="date">Date:</label>
        <input type="date" id="date" name="date" value="<%= record.date %>" />
      </div>
      <div>
        <label for="productID">Product ID:</label>
        <!-- Display custom product ID -->
        <% const product = products.find(prod => prod._id.toString() ===
        record.productID.toString()); %>
        <input
          type="text"
          id="productID"
          name="productID"
          value="<%= product ? product.customID : 'N/A' %>"
          disabled
        />
      </div>
      <div>
        <label for="sales">Sales:</label>
        <input
          type="number"
          id="sales"
          name="sales"
          value="<%= record.sales %>"
        />
      </div>
      <div>
        <label for="price">Price:</label>
        <input
          type="number"
          id="price"
          name="price"
          value="<%= record.price %>"
        />
      </div>
      <div>
        <label for="competitorPrice">Competitor Price:</label>
        <input
          type="number"
          id="competitorPrice"
          name="competitorPrice"
          value="<%= record.competitorPrice %>"
        />
      </div>
      <button type="submit" class="save-btn">Save Changes</button>
    </form>
  </body>
</html>
