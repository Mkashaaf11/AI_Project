<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>All Sales</title>
    <style>
      table {
        width: 100%;
        border-collapse: collapse;
      }

      th,
      td {
        padding: 8px;
        text-align: left;
        border-bottom: 1px solid #ddd;
      }

      th {
        background-color: #f2f2f2;
      }

      tr:hover {
        background-color: #f5f5f5;
      }

      .arrow {
        cursor: pointer;
      }
    </style>
  </head>
  <body>
    <h1>All Sales</h1>
    <table>
      <thead>
        <tr>
          <th>Date</th>
          <th>Product ID</th>
          <th>Sales</th>
          <th>Price</th>
          <th>Competitor Price</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% records.forEach(record => { %>
        <tr>
          <td><%= new Date(record.date).toLocaleDateString() %></td>
          <td>
            <% const product = products.find(prod => prod._id.toString() ===
            record.productID.toString()); %> <%= product ? product.customID :
            'N/A' %>
          </td>
          <td><%= record.sales %></td>
          <td><%= record.price %></td>
          <td><%= record.competitorPrice %></td>
          <td class="arrow" onclick="redirectToRecord('<%= record._id %>')">
            &#8594;
          </td>
        </tr>
        <% }); %>
      </tbody>
    </table>
    <script>
      function redirectToRecord(recordId) {
        window.location.href = "/dashboard/sales/" + recordId;
      }
    </script>
  </body>
</html>
